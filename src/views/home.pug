doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    //- link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    //- 출처 : https://fonts.google.com/specimen/Nanum+Myeongjo
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Nanum+Myeongjo&display=swap")
    link(rel="stylesheet", href="public/css/reset.css")
    link(rel="stylesheet", href="public/css/common.css")
    link(rel="stylesheet", href="public/css/layout/welcome.css")
    link(rel="stylesheet", href="public/css/layout/control.css")
    link(rel="stylesheet", href="public/css/layout/chat.css")
    link(rel="stylesheet", href="public/css/elements/button.css")
    link(rel="stylesheet", href="public/css/elements/bubble.css")
  body 
    header
      h1 Noom
    main 
      div#welcome
        form.welcome-form
          input.welcome-form__input(placeholder="Room name", required, type="text")
          button.welcome-form__button Enter room
      div#call.call
        div#myStream.my-stream
          div.control
            button#mute Mute
            button#camera Turn Camera Off
            select#cameras
          div.media
            video#myFace(autoplay, playsinline, width="400", height="400")
            video#peerFace(autoplay, playsinline, width="400", height="400")
        div.chat 
          ul.chats 
            li example
            li example
          form 
            input(placeholder="Message", required, type="text")
            input(value="Send", required, type="submit")
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js")
